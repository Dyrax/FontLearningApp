<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dyrax.klingon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.DisplayMessageActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.TrainingActivity"
            android:parentActivityName=".Activities.ProgressActivity" />
        <activity
            android:name=".Activities.LanguageActivity"
            android:label="@string/title_activity_language"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ProgressActivity"
            android:parentActivityName=".Activities.LanguageActivity" />
    </application>

</manifest>